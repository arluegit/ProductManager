@model ProductManager.Models.Product

@{
    ViewData["Title"] = "Create";
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        請修正以下錯誤：
    </div>
}
<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <!-- 新增的分類選單 -->
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">分類</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Category">
                    <option value="">-- 請選擇分類 --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">上傳圖片</label>
                <input type="file" name="imageFile" class="form-control" accept="image/*" />
            </div>

            <div class=" form-check md-3">
                <input class="form-check-input" asp-for="IsAvailable"/>
                <label class="form-check-label" asp-for="IsAvailable">是否上架</label>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
