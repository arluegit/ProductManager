@model ProductManager.Models.Order

<h2>訂單明細 - @Model.OrderNumber</h2>

<div>
    <p><strong>下單日期：</strong>@Model.OrderDate.ToString("yyyy-MM-dd HH:mm")</p>
    <p><strong>總金額：</strong>@Model.TotalAmount.ToString("C")</p>
    <p><strong>狀態：</strong>@Model.Status</p>
</div>

<h3>商品明細</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>商品名稱</th>
            <th>數量</th>
            <th>單價</th>
            <th>小計</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice.ToString("C")</td>
                <td>@(item.Quantity * item.UnitPrice).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">返回訂單列表</a>
