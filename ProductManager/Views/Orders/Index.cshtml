@model IEnumerable<ProductManager.Models.Order>
@using Microsoft.AspNetCore.Mvc.Rendering

<h2>訂單清單</h2>

<form asp-action="Index" method="get" class="form-inline mb-3">
    <input type="text" name="search" value="@ViewBag.CurrentSearch" placeholder="訂單編號或姓名" class="form-control mr-2" />

    <select name="status" class="form-control mr-2" asp-items="ViewBag.StatusList"></select>

    <button type="submit" class="btn btn-primary">搜尋</button>
</form>

<table class="table table-bordered table-hover">
    <thead class="thead-light">
        <tr>
            <th>訂單編號</th>
            <th>日期</th>
            <th>客戶姓名</th>
            <th>Email</th>
            <th>總金額</th>
            <th>狀態</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderNumber</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@order.CustomerName</td>
                <td>@order.Email</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>@order.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-primary">詳細</a>
                </td>
            </tr>
        }
    </tbody>
</table>
