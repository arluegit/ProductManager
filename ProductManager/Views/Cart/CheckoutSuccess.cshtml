@model ProductManager.Models.OrderViewModel
@using System.Globalization

<h2>結帳完成</h2>

<p>訂單編號: @Model.OrderId</p>
<p>建立時間: @Model.CreatedAt.ToString("yyyy/MM/dd HH:mm")</p>


<table class="table">
    <thead>
        <tr>
            <th>商品</th>
            <th>數量</th>
            <th>單價</th>
            <th>小計</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C0", CultureInfo.CreateSpecificCulture("zh-TW"))</td>
                <td>@((item.Price * item.Quantity).ToString("C0", CultureInfo.CreateSpecificCulture("zh-TW")))</td>
            </tr>
        }
    </tbody>
</table>

<h4>總金額: @(Model.TotalAmount.ToString("C0", CultureInfo.CreateSpecificCulture("zh-TW")))</h4>